<h1>Listing transcripts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Contact</th>
      <th>Digital publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transcripts.each do |transcript| %>
      <tr>
        <td><%= transcript.title %></td>
        <td><%= transcript.date %></td>
        <td><%= transcript.contact %></td>
        <td><%= transcript.digital_publisher %></td>
        <td><%= link_to 'Show', transcript %></td>
        <td><%= link_to 'Edit', edit_transcript_path(transcript) %></td>
        <td><%= link_to 'Destroy', transcript, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transcript', new_transcript_path %>
